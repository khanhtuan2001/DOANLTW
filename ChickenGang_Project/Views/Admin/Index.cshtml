@model IEnumerable<ChickenGang_Project.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}


<div class="row">
    <br />
    <div class="col-md-12">
    </div>
</div>


@Html.ActionLink("Thêm sản phẩm", "Create", null, new { @class = "btn btn-success" })
<br />

<main class="mt-5 pt-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 mb-3">
                <div class="card">
                    <div class="card-header">
                        <span><i class="bi bi-table me-2"></i></span> Data Table
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example"
                                   class="table table-striped data-table"
                                   style="width: 100%">
                                <thead>
                                    <tr>

                                        <th>
                                            Tên sản phẩm
                                        </th>
                                        <th>
                                            Đơn giá
                                        </th>
                                        <th>
                                            Hình ảnh
                                        </th>
                                        <th>
                                            Số lượng tồn
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>


                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenSP)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DonGia)
                                            </td>
                                            <td>
                                                <img src="\@Html.DisplayFor(modelItem => item.HinhAnh)" width="200" />
                                                @*<img src="@item.HinhAnh" width="300" />*@
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SoLuongTon)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Sửa", "Edit", new { id = item.MaSP }, new { @class = "btn btn-success" })
                                                @Html.ActionLink("Chi tiết", "Detail", new { id = item.MaSP }, new { @class = "btn btn-success" })
                                                @Html.ActionLink("Xóa", "Delete", new { id = item.MaSP }, new { @class = "btn btn-success" })
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                               
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
</main>

