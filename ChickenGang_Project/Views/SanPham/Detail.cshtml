@model ChickenGang_Project.Models.SanPham
@*@model IEnumerable<SanPham>*@

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Layout/DetailLayout.cshtml";
}

@*@{ 
    IEnumerable<SanPham> lstbonus = (IEnumerable<SanPham>)ViewBag.lstbonus;
}*@


<div class="container">
    <section class="py-5" style="margin-top:130px;">
        <p style="font-size: 20px;">Tùy chỉnh > @Html.DisplayFor(model => model.TenSP)</p>
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="~/@Html.DisplayFor(model => model.HinhAnh)" alt="..." /></div>
                <div class="col-md-6">

                    <h1 class="display-5 fw-bolder">@Html.DisplayFor(model => model.TenSP)</h1>
                    <div class="fs-5 mb-5">
                        <span>@Html.DisplayFor(model => model.DonGia)</span>
                    </div>
                    <p class="lead">@Html.DisplayFor(model => model.Mota)</p>
                    <p class="lead">@Html.DisplayFor(model => model.Mota2)</p>
                    <p class="lead">@Html.DisplayFor(model => model.Mota3)</p>

                    <div class="d-flex">
                        <input class="form-control text-center me-3" id="inputQuantity" type="number" value="1" style="width: 5rem" />
                        <button class="btn btn-outline-dark flex-shrink-0" type="button">
                            <i class="fa-solid fa-cart-plus me-1">
                              
                                </i>
                            Thêm vào giỏ hàng

                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">Sẽ rất tuyệt nếu bạn chọn thêm:</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @*@Html.Partial("~/Views/SanPham/SanPhamBonus.cshtml", lstbonus)*@

        </div>
    </div>
</section>

